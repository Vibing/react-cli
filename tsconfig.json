{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}